<p id="notice"><%= notice %></p>

<h1>Registers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact</th>
      <th>Dateregister</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registers.each do |register| %>
      <tr>
        <td><%= register.name %></td>
        <td><%= register.contact %></td>
        <td><%= register.dateregister %></td>
        <td><%= register.birthday %></td>
        <td><%= link_to 'Show', register %></td>
        <td><%= link_to 'Edit', edit_register_path(register) %></td>
        <td><%= link_to 'Destroy', register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Register', new_register_path, class: 'btn btn-primary' %>
