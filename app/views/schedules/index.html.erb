<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Service</th>
      <th>Dataschedule</th>
      <th>Hora</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.name %></td>
        <td><%= schedule.service %></td>
        <td><%= schedule.dataschedule %></td>
        <td><%= schedule.hora %></td>
        <td><%= schedule.status %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path, class: 'btn btn-primary' %>
